<form action="/api/auth/signup" method="post">
    <div>
        <h1>Sign Up</h1>
    </div>
    <div class="form-group">
        <label>Username: </label>
        <input
                type="text"
                name="username"
                id="username"
                placeholder="Enter your username"
                required />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input
                type="password"
                name="password"
                id="password"
                placeholder="Enter your password"
                required />
    </div>
    <div>
        <input type="submit" value="register" />
    </div>
</form>
