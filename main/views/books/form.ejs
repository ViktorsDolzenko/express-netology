    <form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthor">Автор</label>
        <textarea
                rows="3"
                name="authors"
                class="form-control"
                id="inputAuthor"
        ><%= book.authors %></textarea>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="favorite" value="yes" id="favorite">
        <label class="form-check-label" for="favorite">
            Yes
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="favorite" id="favorite" value="no" checked>
        <label class="form-check-label" for="favorite">
            No
        </label>
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
